<UserControl x:Class="PDV.Controls.Numeric"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PDV.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <TextBox x:Name="InputTxtb" 
                 Text="{Binding RelativeSource={RelativeSource Mode=FindAncestor,
                                                               AncestorType=local:Numeric},
                                Path=Value,
                                Mode=TwoWay}" 
                 TextAlignment="{Binding RelativeSource={RelativeSource Mode=FindAncestor,AncestorType=local:Numeric},Path=TextAlignment}"/>
    </Grid>
</UserControl>

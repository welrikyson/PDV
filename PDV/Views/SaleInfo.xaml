<Page x:Class="PDV.Views.SaleInfo"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      FocusManager.IsFocusScope="True"
      FocusManager.FocusedElement="{Binding ElementName=AnyTextBox,Mode=OneTime}"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="64">
        <StackPanel HorizontalAlignment="Left">
            <TextBlock Text="Finalizar venda"
                       Margin="0 0 0 16"
                       Style="{StaticResource MaterialDesignHeadline6TextBlock}" />
            <TextBox x:Name="AnyTextBox" Width="200" />
            <Button Content="Emitir cupom fiscal" Click="Button_Click"/>

        </StackPanel>
    </Grid>
</Page>
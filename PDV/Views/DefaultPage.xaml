<Page x:Class="PDV.Views.DefaultPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PDV.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="DefaultPage">

    <Grid>
        <Image Opacity=".62" Source="pack://application:,,,/Images/point-of-sale-system.png" Stretch="Fill" Margin="-16"/>
        <Grid>            
            <TextBlock Text="Caixa Aberto" 
                       VerticalAlignment="Top"
                       Style="{StaticResource MaterialDesignHeadline1TextBlock}"/>
            <Button FontSize="36" Width="360" Height="80"
                    VerticalAlignment="Center" Click="Button_Click">Iniciar Venda</Button>
        </Grid>
    </Grid>
</Page>

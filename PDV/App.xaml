<Application x:Class="PDV.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="clr-namespace:PDV.Controls"
             xmlns:vm="clr-namespace:PDV.ViewModels"
             xmlns:views="clr-namespace:PDV.Views">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <materialDesign:BundledTheme BaseTheme="Light" PrimaryColor="DeepPurple" SecondaryColor="Lime" />
                <ResourceDictionary
                    Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Defaults.xaml" />
                <ResourceDictionary Source="pack://application:,,,/PDV;component/Controls/DialogStyle.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <Style x:Key="DefaultMainGridStyle"  TargetType="{x:Type controls:MainGrid}">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type controls:MainGrid}">
                            <ContentPresenter/>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style TargetType="controls:MainGrid" BasedOn="{StaticResource DefaultMainGridStyle}"/>
            <CornerRadius x:Key="Radius">16</CornerRadius>
            <DataTemplate DataType="{x:Type vm:ProductListManager}">
                <views:ProductList />
            </DataTemplate>
            <DataTemplate DataType="{x:Type vm:ProductListHome}">
                <views:Home VerticalAlignment="Center" HorizontalAlignment="Center" />
            </DataTemplate>
            <DataTemplate DataType="{x:Type vm:Main}" >
                <views:Main/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type vm:SaleInfo}">
                <views:SaleInfo />
            </DataTemplate>
            <DataTemplate DataType="{x:Type vm:ProductListCart}">
                <views:ProductListChart Margin="16" />
            </DataTemplate>
        </ResourceDictionary>
    </Application.Resources>
</Application>
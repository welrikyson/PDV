<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls">
    <Style TargetType="mah:NumericUpDown">
        <Style.Setters>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate>
                        <Grid>                            
                            <TextBox x:Name="PART_TextBox" MinWidth="120" Padding="40 16"/>
                            <RepeatButton x:Name="PART_NumericDown" HorizontalAlignment="Left" 
                                          Focusable="False"
                                          Style="{StaticResource MaterialDesignFlatButton}">-</RepeatButton>
                            <RepeatButton x:Name="PART_NumericUp" HorizontalAlignment="Right" 
                                          Focusable="False"
                                          Style="{StaticResource MaterialDesignFlatButton}">+</RepeatButton>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style.Setters>
    </Style>
    
</ResourceDictionary>
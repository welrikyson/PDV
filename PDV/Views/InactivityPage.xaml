<UserControl x:Class="PDV.Views.InactivityPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:controls="clr-namespace:PDV.Components.UserControls"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Image Opacity="1" 
               Source="pack://application:,,,/Images/point-of-sale-system.png" 
               Stretch="UniformToFill" Margin="-16"/>
        <StackPanel TextBlock.Foreground="{DynamicResource PrimaryHueMidBrush}">
            <TextBlock Text="Caixa Aberto"
                           FontWeight="Bold"                           
                           Style="{StaticResource AppHeadline1TextBlock}"/>
            <controls:Clock/>
        </StackPanel>
    </Grid>
</UserControl>
